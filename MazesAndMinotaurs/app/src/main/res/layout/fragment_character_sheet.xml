<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/root_character_sheet"
              android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"/>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/character_level_view"
                    android:background="@drawable/character_sheet_box_white"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="36sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/character_name_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/character_sheet_box_black"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/character_class_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:background="@drawable/character_sheet_box_gray"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="24sp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/attributes_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/character_sheet_box_black"
                android:textColor="@color/white"
                android:text="@string/attributes_title"
                android:textAlignment="center"
                android:textSize="24sp"
                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <!-- Row One -->
                <TableRow
                    android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/might_score_title_view"
                        android:layout_column="0"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/might"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/skill_score_title_view"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/skill"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/wits_score_title_view"
                        android:layout_column="2"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/wits"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                </TableRow>

                <!-- Row 2 -->
                <TableRow>

                    <Button
                        android:id="@+id/might_score_button"
                        android:layout_width="63dp"
                        android:layout_column="0"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <Button
                        android:id="@+id/skill_score_button"
                        android:layout_width="63dp"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <Button
                        android:id="@+id/wits_score_button"
                        android:layout_width="63dp"
                        android:layout_column="2"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>
                </TableRow>

                <!-- Row 3 -->
                <TableRow
                    android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/luck_score_title_view"
                        android:layout_column="0"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/luck"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/will_score_title_view"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/will"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/grace_score_title_view"
                        android:layout_column="2"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/grace"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                </TableRow>

                <!-- Row 4 -->
                <TableRow>

                    <Button
                        android:id="@+id/luck_score_button"
                        android:layout_width="63dp"
                        android:layout_column="0"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <Button
                        android:id="@+id/will_score_button"
                        android:layout_width="63dp"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <Button
                        android:id="@+id/grace_score_button"
                        android:layout_width="63dp"
                        android:layout_column="2"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>
                </TableRow>
            </TableLayout>


            <TextView
                android:id="@+id/saves_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/character_sheet_box_black"
                android:textColor="@color/white"
                android:text="@string/saves_title"
                android:textAlignment="center"
                android:textSize="24sp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <!-- Row One -->
                <TableRow
                    android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/athletic_prowess_title_view"
                        android:layout_column="0"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/athletic_prowess_short"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/danger_evasion_title_view"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/danger_evasion_short"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/mystic_fortitude_title_view"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/mystic_fortitude_short"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/physical_vigor_title_view"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/physical_vigor_short"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                </TableRow>
                <!-- Row 2 -->
                <TableRow>

                    <Button
                        android:id="@+id/athletic_prowess_button"
                        android:layout_width="63dp"
                        android:layout_column="0"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <Button
                        android:id="@+id/danger_evasion_button"
                        android:layout_width="63dp"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <Button
                        android:id="@+id/mystic_fortitude_button"
                        android:layout_width="63dp"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <Button
                        android:id="@+id/physical_vigor_button"
                        android:layout_width="63dp"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/combat_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/character_sheet_box_black"
                android:text="@string/combat_title"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <!-- Row One -->
                <TableRow
                    android:layout_width="match_parent">
                    <TextView
                        android:id="@+id/initiative_modifier_title_view"
                        android:layout_column="0"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/initiative"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/attack_title_view"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/attack"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/equipped_weapon_title_view"
                        android:layout_column="2"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/equipped_weapon"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>


                </TableRow>
                <!-- Row 2 -->
                <TableRow>
                    <Button
                        android:id="@+id/initiative_modifier_button"
                        android:layout_width="63dp"
                        android:layout_column="0"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <Button
                        android:id="@+id/attack_button"
                        android:layout_width="63dp"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="type"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <Spinner
                        android:id="@+id/equipped_weapon_spinner"
                        android:layout_width="60dp"
                        android:layout_column="2"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="weapon name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow>

                    <TextView
                        android:id="@+id/defense_title_view"
                        android:layout_width="wrap_content"
                        android:layout_column="0"
                        android:layout_span="2"
                        android:background="@drawable/character_sheet_box_black"
                        android:text="@string/defenses_title"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/hits_title_view"
                        android:layout_width="wrap_content"
                        android:layout_column="2"
                        android:layout_span="2"
                        android:background="@drawable/character_sheet_box_black"
                        android:text="@string/hits_title"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="24sp"/>
                </TableRow>

                <!-- This row displays  current EDC, has a button to equip armor,
                displays total hits, and allows to adjust current hits.-->
                <TableRow android:layout_width="match_parent">
                    <TextView
                    android:id="@+id/edc_title_view"
                    android:layout_column="0"
                    android:background="@drawable/character_sheet_box_gray_no_bottom"
                    android:text="@string/edc_view"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textAlignment="center"
                    android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/armor_title_view"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/armor_view"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/total_hits_title_view"
                        android:layout_column="0"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/total_hits_view"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/current_hits_title_view"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/current_hits_view"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>
                </TableRow>

                <TableRow>
                    <Button
                        android:id="@+id/edc_button"
                        android:layout_column="0"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <Button
                        android:id="@+id/armor_button"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="H-B-S"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <Button
                        android:id="@+id/total_hits_button"
                        android:layout_column="2"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <Button
                        android:id="@+id/current_hits_button"
                        android:layout_column="3"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>
                </TableRow>
                <!--TODO: Remove this comment. -->
                <!-- TableRow -->
                <!-- Button android:id="@+id/save_button"
                    android:text="SAVE SINET"/ -->
                <!-- /TableRow -->
            </TableLayout>

            <TextView
                android:id="@+id/magic_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/character_sheet_box_black"
                android:text="@string/magic_title"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:visibility="gone"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <TableRow>

                    <TextView
                        android:id="@+id/talent_title_view"
                        android:layout_width="wrap_content"
                        android:layout_column="0"
                        android:layout_span="2"
                        android:background="@drawable/character_sheet_box_black"
                        android:text="@string/talent_title"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/power_title_view"
                        android:layout_width="wrap_content"
                        android:layout_column="2"
                        android:layout_span="2"
                        android:background="@drawable/character_sheet_box_black"
                        android:text="@string/power_title"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:visibility="gone"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <!-- This row displays magic stats:  Talent and Bonus, Strength,
                Power, and Spells -->
                <TableRow>

                    <TextView
                        android:id="@+id/talent_bonus_title_view"
                        android:layout_column="0"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/talent_bonus_title"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="24sp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/magic_strength_title_view"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/magic_strength_view"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="24sp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/total_power_title_view"
                        android:layout_column="2"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/total_power_view"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="24sp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/current_power_title_view"
                        android:layout_column="3"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/current_power_view"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="24sp"
                        android:visibility="gone"/>
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/talent_bonus_button"
                        android:layout_column="0"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="24sp"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/magic_strength_button"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="24sp"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/total_power_button"
                        android:layout_column="2"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="24sp"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/current_power_button"
                        android:layout_column="3"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="24sp"
                        android:visibility="gone"/>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/inventory_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/character_sheet_box_black"
                android:text="@string/inventory"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/inventory_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inventory_btn"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="24sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>